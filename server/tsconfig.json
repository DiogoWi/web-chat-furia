{
  "compilerOptions": {
    "target": "ES2024",
    "lib": [
      "ES6"
    ],
    "module": "ESNext",
    "rootDir": "src",
    "resolveJsonModule": true,
    "allowJs": false,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node"
  }
}